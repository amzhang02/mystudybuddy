{
    "name": "My Study Buddy",
    "version": "1.0.0",
    "description": "A reminders extension",
    "permissions": ["notifications", "tabs", "storage", "alarms"],
    "manifest_version": 3,
    "background": {
        "service_worker": "pop-up.js"
    },
    "action": {
        "default_title": "A Useful Reminders Extension",
        "default_popup": "pop-up.html"
    }
}